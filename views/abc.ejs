<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="../static/css/styles.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&family=Roboto:wght@300&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&family=Rubik:wght@300;400&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <title>ATN Shop</title>
</head>

<body>

    <div class="container">
        <div class="header">
            <div class="head-contain">
                <h1>ATN Toy Shopping Cart</h1>
            </div>
        </div>
        <div class="main-contain">
            <div class="col-sm-8">
                <div class="contains">

                    <div class="text">
                        <h3>Product</h3>
                    </div>
                    <form id='form-type' style="margin-left: 1%;   ">
                        <select id='select' style="width: 15%; margin:3% 0 3% 0 ;" class="form-select">
                          <option value="car">car</option>
                          <option value="tank">tank</option>
                        </select>
                        <input value='Search' class="btn btn-primary" type="submit">
                    </form>


                </div>
            </div>
            <div class="col-sm-4 carts ">
                <div class="text-2 ">
                    <h3>Add product</h3>
                </div>
                <div class="total " id="total ">
                    <form method="POST " id='addproduct'>
                        <input class="text-2-1 " id='addproductname' placeholder="Name ">

                        <input class="text-2-1 " id='addproductprice' placeholder="Price ">

                        <input class="text-2-1 " id='addproducttype' placeholder="Type ">

                        <p>
                            <button type='submit' class="addproduct btn btn-primary "> Add
                            </button>
                        </p>

                    </form>
                </div>
            </div>
        </div>
    </div>


</body>
<script src="https://code.jquery.com/jquery-3.6.0.min.js "></script>
